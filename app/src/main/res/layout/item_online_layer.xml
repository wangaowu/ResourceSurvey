<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dpx_50"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_overlay_visible"
        style="@style/common_app_content_text"
        android:layout_width="@dimen/dpx_30"
        android:layout_marginStart="@dimen/dpx_10"
        android:src="@drawable/ic_invisible_layer" />

    <TextView
        android:id="@+id/tv_overlay_name"
        style="@style/common_app_content_text"
        android:layout_width="@dimen/default_width_use_weight"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dpx_20"
        android:layout_weight="1"
        android:gravity="left" />

    <com.xuexiang.xui.widget.button.switchbutton.SwitchButton
        android:id="@+id/sb_overlay_label"
        style="@style/SwitchButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ib_download"
        android:layout_width="@dimen/dpx_70"
        android:layout_height="@dimen/dpx_30"
        android:layout_marginStart="@dimen/dpx_20"
        android:src="@drawable/ic_download" />

</LinearLayout>