<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpx_40"
        android:background="@color/app_common_bg_cyanotic"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.bytemiracle.resourcesurvey.common.view.AppTabLayout
            android:id="@+id/tabs_top_function"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dpx_5"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="@dimen/dpx_20"
            android:layout_height="@dimen/dpx_20"
            android:layout_marginEnd="@dimen/dpx_5"
            android:scaleType="fitXY"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_width_use_weight"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/ll_tools"
            layout="@layout/layout_draw_geometry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpx_45"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>