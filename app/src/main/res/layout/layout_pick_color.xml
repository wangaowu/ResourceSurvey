<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dpx_45"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_width_use_weight"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flag"
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_weight="2"
            android:text="颜色"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="@dimen/dpx_20"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_setup_color"
                android:layout_width="@dimen/dpx_100"
                android:layout_height="match_parent"
                android:background="#F00" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/app_line_1px_height_gray" />

</LinearLayout>