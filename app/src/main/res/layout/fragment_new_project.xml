<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_bg">

            <TextView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:text="*"
                android:textColor="#DD2817"
                android:textSize="16sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="start|center_vertical"
                android:text="工程名称:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入"
                android:singleLine="true"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_bg">

            <TextView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="#DD2817"
                android:textSize="16sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="start|center_vertical"
                android:text="创建人员:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/createBy"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入"
                android:singleLine="true"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_bg">

            <TextView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:text="*"
                android:textColor="#DD2817"
                android:textSize="16sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="start|center_vertical"
                android:text="坐标系统:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/prjSystem"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@drawable/tree_right"
                android:focusable="false"
                android:hint="请选择"
                android:singleLine="true"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_bg">

            <TextView
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:text=""
                android:textColor="#DD2817"
                android:textSize="16sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="start|center_vertical"
                android:text="创建时间:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/createTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@drawable/tree_right"
                android:focusable="false"
                android:hint="请选择"
                android:singleLine="true"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_cyanotic_selector"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>