<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.bytemiracle.resourcesurvey.common.view.AppSubTabLayout
        android:id="@+id/tabs_top_sub_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70FFFFFF"
        android:gravity="center_vertical|start" />

    <include
        android:id="@+id/layout_hover_function"
        layout="@layout/layout_hover_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs_top_sub_function" />

</RelativeLayout>
