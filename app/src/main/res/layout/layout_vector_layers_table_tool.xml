<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dpx_55"
    android:background="@color/gray_0_divider"
    android:orientation="vertical"
    android:paddingTop="@dimen/dpx_10">

    <include layout="@layout/app_line_1px_height_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_width_use_weight"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_weight="2"
            android:text="字段名称"
            android:textStyle="bold" />

        <include layout="@layout/app_line_1px_width" />

        <TextView
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_weight="2"
            android:text="类型"
            android:textStyle="bold" />

        <include layout="@layout/app_line_1px_width" />

        <TextView
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_weight="1"
            android:text="删除"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/app_line_1px_height_gray" />

</LinearLayout>