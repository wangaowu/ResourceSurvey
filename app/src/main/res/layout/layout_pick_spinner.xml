<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dpx_45"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_width_use_weight"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flag"
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_weight="2"
            android:text="flag"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="@dimen/dpx_40"
            android:layout_weight="2"
            android:gravity="center">

            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                style="@style/Material.SpinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dpx_5"
                android:layout_marginRight="@dimen/dpx_20"
                android:background="@android:color/transparent"
                app:ms_arrow_tint="@color/common_dark" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/app_line_1px_height_gray" />

</LinearLayout>