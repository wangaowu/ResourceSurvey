<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dpx_50"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_width_use_weight"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_layer_name"
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="图层名称" />

        <include layout="@layout/app_line_1px_width" />

        <TextView
            android:id="@+id/tv_layer_type"
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="图层类型" />

        <include layout="@layout/app_line_1px_width" />

        <TextView
            android:id="@+id/tv_layer_element_count"
            style="@style/common_app_content_text"
            android:layout_width="@dimen/default_width_use_weight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="数据量" />

        <include layout="@layout/app_line_1px_width" />

    </LinearLayout>

    <include layout="@layout/app_line_1px_height_gray" />

</LinearLayout>