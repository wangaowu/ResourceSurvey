<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_text_radius_5_gray_selector"
    android:minHeight="@dimen/dpx_90"
    android:padding="@dimen/dpx_10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_create_by"
            style="@style/common_app_content_text"
            android:drawableLeft="@drawable/ic_user_host"
            android:drawablePadding="@dimen/dpx_5"
            android:text="host" />

        <TextView
            android:id="@+id/tv_create_time"
            style="@style/common_app_content_text"
            android:text="2020/12/12" />

        <Button
            android:id="@+id/btn_export_project"
            style="@style/app_14sp_white_text_blue_small_button"
            android:background="@drawable/bg_cyanotic_selector"
            android:text="备份" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_project_name"
        style="@style/common_app_content_text"
        android:text="name1"
        android:textSize="@dimen/spx_16" />

    <TextView
        android:id="@+id/tv_prj_system"
        style="@style/common_app_content_text"
        android:layout_below="@id/tv_project_name"
        android:layout_marginTop="@dimen/dpx_2"
        android:drawableLeft="@drawable/set_coor_system"
        android:drawablePadding="@dimen/dpx_5"
        android:text="wgs84" />

    <TextView
        android:id="@+id/tv_project_path"
        style="@style/common_app_content_text"
        android:layout_below="@id/tv_prj_system"
        android:layout_marginTop="4dp"
        android:text="sd://aaaaaaaaaa" />

</RelativeLayout>