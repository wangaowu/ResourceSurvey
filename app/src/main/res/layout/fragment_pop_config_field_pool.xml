<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_common_focus_gray"
    android:padding="@dimen/dpx_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app_text_radius_5_gray_selector"
        android:padding="@dimen/dpx_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/app_common_bold_2_black"
                android:text="图层选择" />

            <GridView
                android:id="@+id/grid_layers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dpx_10"
                android:layout_marginBottom="@dimen/dpx_10"
                android:horizontalSpacing="@dimen/dpx_10"
                android:numColumns="4"
                android:verticalSpacing="@dimen/dpx_5" />

            <LinearLayout
                android:id="@+id/ll_field_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>